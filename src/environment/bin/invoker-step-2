#!/bin/bash

function help() {
  cat <<HERE
Step 2: Escaping

Please invoke me with the following options:

    Making the big \$bucks.

HERE
  exit 1;
}

progress_file=~/.invoker-2

if [[ $1 == '--help' || $1 == '-h' ]]; then
  help
elif [ ! -f $progress_file ]; then
  touch $progress_file
  help
fi

if [[ $@ == 'Making the big $bucks.' ]]; then
  exit
fi

echo "Not exactly. Here's what I'm seeing:" >&2
echo $@ >&2
exit 1
